<%- include('partials/header.ejs'); %>

    <div class="site-blocks-cover" style="overflow: hidden;">
      <div class="container">
        <div class="row align-items-center justify-content-center">

          <div class="col-md-12" style="position: relative;" data-aos="fade-up" data-aos-delay="200">
            
            <img src="/images/banner.jpg" alt="Image" class="img-fluid img-absolute banner">

            <div class="row mb-4" data-aos="fade-up" data-aos-delay="200">
              <div class="col-lg-6 mr-auto">
                <h1>Selamat Datang Kembali Boss</h1>
                <p class="mb-5">Kapanpun kami siap melayani anda, dan kami akan selalu melayani anda dengan senyuman.</p>
                <div>
                  <a href="#" class="btn btn-primary mr-2 mb-2 text-white">Get Started</a>
                </div>
              </div>
              
            </div>

          </div>
        </div>
      </div>
    </div>  


    <div class="site-section" id="features-section">
      <div class="container">
        <div class="row mb-5 justify-content-center text-center"  data-aos="fade-up">
          <div class="col-7 text-center  mb-5">
            <h2 class="section-title"><%= results.length %> Data Tersimpan</h2>
            <p class="lead">Data akun yang telah tersimpan, kami jamin keamanannya.</p>
          </div>
        </div>
        <div class="row align-items-stretch">
    
          <% results.forEach( (result) => { %>
          <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up" data-aos-delay="100">
            <div class="unit-4 d-block bg-white" style="box-shadow: 0 20px 20px #eee;">
                <div class="text-left">
                
                	<h2 class="text-black font-weight-light mb-4 text-capitalize"><%= result['sosial_name']; %></h2>
                	
                  <p class="">Username</p>
                  <p class="lead text-black"><%= result['username']; %></p> 
                  
                  <p class="">Password</p>
                  <p class="lead text-black"><%= result['password']; %></p> 
                  
                  <p class="text-right">
                    <a href="#" class="pl-3 pr-3 delete text-primary" data-toggle="modal" data-target="#modal-hapus" data-id="<%= result["id"]; %>">Hapus</a>
                    <a href="#" class="pl-3 pr-3 edit text-primary" data-toggle="modal" data-target="#modal-edit" data-id="<%= result["id"]; %>" data-sname="<%= result['sosial_name'] %>" data-username="<%= result["username"] %>" data-password="<%= result["password"] %>">Edit</a>
                  </p>
              </div>
            </div>
          </div>
          <% }); %>

        </div>
      </div>
    </div>
    
   	  
   	  <!-- Modal Hapus --> 
   	  <div class="modal fade" id="modal-hapus" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true"> 
   	    <form action="/delete" method="POST">
   	    <div class="modal-dialog modal-dialog-centered" role="document"> 
   	      <div class="modal-content"> 
   	        <div class="modal-header"> 
   	          <h5 class="modal-title text-dark" id="staticBackdropLabel">Hapus..</h5> 
   	          <button type="button" class="close" data-dismiss="modal" aria-label="Close"> 
   	            <span aria-hidden="true">&times;</span> 
   	          </button> 
   	        </div> 
   	        <div class="modal-body"> Anda yakin ingin <span class="text-danger"><strong>menghapusnya,</strong></span> Bos ?</div> 
   	        <div class="modal-footer"> 
   	          <input type="hidden" name="id" class="id">
   		        <button type="button" class="btn btn-primary cancel" data-dismiss="modal">Batal</button>
   		        <button type="submit" class="btn btn-secondary bg-white text-dark">Hapus</button> 
   		      </div> 
   	      </div> 
   	    </div>
   	    </form>
   	  </div>
   	  
   	  <!-- Modal Edit --> 
   	  <div class="modal fade" id="modal-edit" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true"> 
   	    <form action="/edit" method="POST">
   	    <div class="modal-dialog modal-dialog-centered" role="document"> 
   	      <div class="modal-content"> 
   	        <div class="modal-header"> 
   	          <h5 class="modal-title text-dark" id="staticBackdropLabel">Modal title</h5> 
   	          <button type="button" class="close" data-dismiss="modal" aria-label="Close"> 
   	            <span aria-hidden="true">&times;</span> 
   	          </button> 
   	        </div> 
   	        <div class="modal-body text-dark">
   	        	<input class="form-control mb-3 sname" style="border-radius: 10px;" name="sname">
   	        	<input class="form-control mb-3 username" style="border-radius: 10px;" name="username">
   	        	<input class="form-control mb-3 password" style="border-radius: 10px;" name="password">
   	        </div> 
   	        <div class="modal-footer"> 
   	          <input type="hidden" name="id" class="id-edit">
   		        <button type="button" class="btn btn-secondary bg-white cancel text-dark" data-dismiss="modal">Batal</button>
   		        <button type="submit" class="btn btn-primary">Simpan</button> 
   		      </div> 
   	      </div> 
   	    </div>
   	    </form>
   	  </div>
   	  
   	  
   	  
    
<%- include('partials/footer.ejs'); %>